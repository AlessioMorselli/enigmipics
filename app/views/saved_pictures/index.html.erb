<p id="notice"><%= notice %></p>

<h1>Saved Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_pictures.each do |saved_picture| %>
      <tr>
        <td><%= saved_picture.description %></td>
        <td><%= link_to 'Show', saved_picture %></td>
        <td><%= link_to 'Edit', edit_saved_picture_path(saved_picture) %></td>
        <td><%= link_to 'Destroy', saved_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved Picture', new_saved_picture_path %>
